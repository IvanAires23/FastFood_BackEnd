generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id          Int       @id @default(autoincrement())
  categoryId  Int
  Catergory   Category  @relation(fields: [categoryId], references: [id])
  price       Int
  name        String
  description String
  Kitchen     Kitchen[]

  @@map("foods")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  Food Food[]

  @@map("categories")
}

model Kitchen {
  id          Int               @id @default(autoincrement())
  nameUser    String
  foodId      Int
  Food        Food              @relation(fields: [foodId], references: [id])
  observation String?
  preparation StatusPreparation

  @@map("kitchen")
}

enum StatusPreparation {
  PEDDING
  READY
}
