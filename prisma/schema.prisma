generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id             Int       @id @default(autoincrement())
  category       Category
  price          Int
  name           String
  subDescription String
  description    String
  code           String
  image          String
  Kitchen        Kitchen[]

  @@map("foods")
}

model Kitchen {
  id          Int               @id @default(autoincrement())
  nameUser    String
  foodId      Int
  Food        Food              @relation(fields: [foodId], references: [id])
  observation String?
  preparation StatusPreparation

  @@map("kitchen")
}

enum StatusPreparation {
  PEDDING
  READY
}

enum Category {
  COMBOS
  FOLLOWUP
  DRINKS
  DESSERTS
}
